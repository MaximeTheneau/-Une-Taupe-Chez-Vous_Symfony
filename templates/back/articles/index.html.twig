{% extends 'base.html.twig' %}

{% block title %}Articles index{% endblock %}

{% block body %}
    <h1 class="text-center text-5xl font-light m-auto">Articles :</h1>
        <table class="w-9/12 text-left text-sm font-light m-auto">
            <thead>
                <tr class="border-b dark:border-neutral-500">
                    <th>Titre</th>
                    <th>Image</th>
                    <th>Categorie</th>
                </tr>
            </thead>
            <tbody>
            {% for article in articles %}
                <tr>
                    <td>{{ article.title }}</td>
                    <td>
                        {% if article.category %}
                            {{ article.category.name }}
                        {% endif %}
                    </td>
                    <td>

                        <img src={{'https://res.cloudinary.com/dsn2zwbis/image/upload/unetaupechezvous/' ~ article.imgPost ~ '.webp'}} alt="imgHeader" width="100px">
                    </td>
                    <td>
                        <a href="{{ path('app_back_articles_edit', {'id': article.id}) }}" class="button is-info">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    <a href="{{ path('app_back_articles_new') }}" class="button is-primary items-center">Nouvelle article</a>
{% endblock %}
