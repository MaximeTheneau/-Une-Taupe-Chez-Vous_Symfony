{% extends 'base.html.twig' %}

{% block title %}Articles index{% endblock %}

{% block body %}
    <h1>Les articles</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Subtitle</th>
                <th>Contenu</th>
                <th>imgHeader</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.title }}</td>
                <td>
                    <img src={{article.imgThumbnail}} alt="imgHeader" width="100px">
                </td>
                <td>
                    <a href="{{ path('app_back_articles_show', {'id': article.id}) }}">show</a>
                    <a href="{{ path('app_back_articles_edit', {'id': article.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_back_articles_new') }}">Create new</a>
{% endblock %}
