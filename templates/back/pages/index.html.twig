{% extends 'base.html.twig' %}

{% block title %}Pages{% endblock %}

{% block body %}
    <h1>Les pages</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Titre</th>
                <th>Image</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for page in pages %}
            <tr>
                <td>{{ page.title }}</td>
                <td>
                    <img src={{'https://res.cloudinary.com/dsn2zwbis/image/upload/v1675085410/unetaupechezvous/' ~ page.slug ~ '.webp'}} alt="imgHeader" width="100px">
                </td>
                <td>

                    <a href="{{ path('app_back_pages_edit', {'id': page.id}) }}"class="button is-info">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_back_pages_new') }}" class="button is-primary">Nouvelle page</a>
{% endblock %}
