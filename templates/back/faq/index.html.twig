{% extends 'base.html.twig' %}

{% block title %}Foire aux questions{% endblock %}

{% block body %}
    <h1>Foire aux questions</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Questions</th>
                <th>Responses</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for faq in faqs %}
            <tr>
                <td>{{ faq.question }}</td>
                <td>{{ faq.answer }}</td>
                <td>
                    <a href="{{ path('app_back_faq_edit', {'id': faq.id}) }}" class="button is-info">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_back_faq_new') }}"class="button is-primary">Nouvelle Question</a>
{% endblock %}
